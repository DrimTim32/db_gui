<Window x:Class="GuiBase.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <DockPanel LastChildFill="True">
            <Label Width="70" VerticalAlignment="Center" HorizontalAlignment="Center">Login</Label>
            <TextBox x:Name="LoginBox" VerticalContentAlignment="Center"></TextBox>
        </DockPanel>
        <DockPanel Grid.Row="1" LastChildFill="True">
            <Label Width="70" VerticalAlignment="Center" HorizontalAlignment="Center">Password</Label>
            <PasswordBox x:Name="PasswordBox" VerticalContentAlignment="Center" ></PasswordBox>
        </DockPanel>
        <Button Grid.Row="2" Click="Login_Click">LOGIN</Button>
    </Grid>
</Window>
